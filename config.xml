<?xml version='1.0' encoding='utf-8' ?>
<widget id="org.geogardens.tours" version="0.0.7" ios-CFBundleVersion="10" android-versionCode="8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Geogardens</name>
    <description>
        Geogardens
    </description>
    <author email="mdunham@geogardens.org" href="http://geogardens.org">
        Geogardens
    </author>
    <content src="Main.html" />
     <access origin="*" />
   <allow-navigation href="*" />
   <allow-intent href="*" />
    <icon src="res/icon.png" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="2" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="Orientation" value="portrait" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <platform name="ios">

        <!-- ICONS -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon/ios/appicon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/appicon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/appicon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/appicon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/appicon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/appicon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/appicon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/appicon.png" width="57" height="57" />
        <icon src="res/icon/ios/appicon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/ios/appicon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/appicon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/appicon-small.png" width="29" height="29" />
        <icon src="res/icon/ios/appicon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/ios/appicon-50.png" width="50" height="50" />
        <icon src="res/icon/ios/appicon-50@2x.png" width="100" height="100" />
        <!-- SPLASH-->
        <splash src="res/screen/ios/Default.png" width="320" height="480" />
        <splash src="res/screen/ios/Default@2x.png" width="640" height="960" />
        <splash src="res/screen/ios/Default-568h@2x.png" width="640" height="1136" />
        <splash src="res/screen/ios/Default-667h@2x.png" width="750" height="1334" />
        <splash src="res/screen/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
        <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242" />
        <splash src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024" />
        <splash src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048" />
        <splash src="res/screen/ios/Default-Landscape~ipad.png" width="1024" height="768" />
        <splash src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536" />
        
    </platform>
    <platform name="android">
        <icon src="res/icon/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="res/icon/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="res/icon/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="res/icon/android/drawable-xhdpi/icon.png" density="xhdpi" />
        <icon src="res/icon/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
        <!--SPLASH-->
        <splash src="res/screen/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="res/screen/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="res/screen/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="res/screen/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="res/screen/android/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>
        
        <splash src="res/screen/android/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="res/screen/android/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="res/screen/android/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="res/screen/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
        <splash src="res/screen/android/drawable-xxhdpi/screen.png" density="port-xxhdpi"/>
    </platform>
</widget>